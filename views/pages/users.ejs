<% include ../partials/header %>
<br>
<input class="form-control" id="myInput" type="text" placeholder="Search..">
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Password</th>
            <th>Edit</th>
            <th>Delete</th>
            <th><a class="btn btn-success" href ="/add_users"> Add New User</a></th>

        </tr>
    </thead>
    <tbody id="myTable">
        <% users.forEach(function(user){%>
        <tr>
            <td scope="row"><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><a name="" id="" class="btn btn-info" href="/users/<%= user.id %>" role="button">EDIT</a></td>
            <td><a name="btnConfirm" value="Confirm"  class="btn btn-danger" href="/user_delete/<%= user.id %>" onclick="return confirm('Are you sure you want to delete this product?')"role="button">DELETE</a></td>
        </tr>
        <% }); %>
        
    </tbody>
</table>
<script>
    $(document).ready(function(){
      $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
    </script>
  <% include ../partials/footer %>