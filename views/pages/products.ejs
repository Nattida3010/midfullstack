<% include ../partials/header %>
<br>
<input class="form-control" id="myInput" type="text" placeholder="Search..">
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Delete</th>
            <th><a class="btn btn-success" href ="/add_product"> Add New Product </a></th>

        </tr>
    </thead>
    <tbody id="myTable">
        <% products.forEach(function(product){%>
        <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td><a name="" id="" class="btn btn-info" href="/products/<%= product.id %>" role="button">EDIT</a></td>
            <td><a name="btnConfirm" value="Confirm"  class="btn btn-danger" href="/product_delete/<%= product.id %>" onclick="return confirm('Are you sure you want to delete this product?')"role="button">DELETE</a></td>
        </tr>
        <% }); %>
        
        
    </tbody>
</table>
<script>
    $(document).ready(function(){
      $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
    </script>

  <% include ../partials/footer %>