<% include ../partials/header %>

<script language="javascript">
    function fncAlert(){
    
    alert('Are you sure you want to delete this product?');
     }
    
    </script>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Delete</th>
            <th><a class="btn btn-success" href ="/add_product"> Add New </a></th>

        </tr>
    </thead>
    <tbody>
        <% products.forEach(function(product){%>
        <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td><a name="" id="" class="btn btn-info" href="/products/<%= product.id %>" role="button">EDIT</a></td>
                <td><a name="" id="" OnClick="JavaScript:fncAlert();" class="btn btn-danger" href="/product_delete/<%= product.id %>" role="button">DELETE</a></td>
        </tr>
        <% }); %>
        
        
    </tbody>
</table>

